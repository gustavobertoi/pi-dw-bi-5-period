// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model DimensionTypeOfService {
  id                 Int                  @id @default(autoincrement())
  ref_id             String               @unique @db.Char(36)
  FactServiceRequest FactServiceRequest[]

  @@map("dw_dimension_type_of_services")
}

model DimensionCustomers {
  id                 Int                  @id @default(autoincrement())
  ref_id             String               @unique @db.Char(36)
  FactServiceRequest FactServiceRequest[]

  @@map("dw_dimension_customers")
}

model DimensionEstablishments {
  id                 Int                  @id @default(autoincrement())
  ref_id             String               @unique @db.Char(36)
  FactServiceRequest FactServiceRequest[]

  @@map("dw_dimension_establishments")
}

model DimensionPeriods {
  id                 Int                  @id @default(autoincrement())
  exact_date         DateTime
  month              String               @db.Char(2)
  year               String               @db.Char(4)
  holiday            Boolean
  FactServiceRequest FactServiceRequest[]

  @@map("dw_dimension_periods")
}

model FactServiceRequest {
  id                 Int     @id @default(autoincrement())
  ref_id             String  @unique @db.Char(36)
  type_of_service_id Int
  customer_id        Int
  establishment_id   Int
  period_id          Int
  total_amount       Decimal @db.Decimal(12, 2)
  net_amount         Decimal @db.Decimal(12, 2)
  taxes_amount       Decimal @db.Decimal(12, 2)

  type_of_service DimensionTypeOfService  @relation(fields: [type_of_service_id], references: [id], onDelete: Restrict, onUpdate: Restrict)
  customer        DimensionCustomers      @relation(fields: [customer_id], references: [id], onDelete: Restrict, onUpdate: Restrict)
  establishment   DimensionEstablishments @relation(fields: [establishment_id], references: [id], onDelete: Restrict, onUpdate: Restrict)
  period          DimensionPeriods        @relation(fields: [period_id], references: [id], onDelete: Restrict, onUpdate: Restrict)
}
